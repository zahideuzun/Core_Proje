@using Entities.Concrete
@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
	<div class="card">
		<div class="card-body">
			<h4 class="card-title">Projelerim</h4>

			<div class="table-responsive">
				<table class="table">
					<thead>
					<tr>
						<th>Proje</th>
						<th>Ücret</th>
						<th>Tamamlanma Durumu</th>
						<th>Sil</th>
						<th>Düzenle</th>
					</tr>
					</thead>
					<tbody>
					@foreach (var item in Model)
					{
						<tr>
							<th scope="row">
								<div class="media align-items-center">
									<a href="#" class="avatar rounded-circle mr-3">
										<img alt="Image placeholder" src="@item.Platform">
									</a>
									<div class="media-body">
										<span class="name mb-0 text-sm">@item.Name</span>
									</div>
								</div>
							</th>
							<td>@item.Price</td>
							<td>@item.Value%</td>
							<td><a href="/Portfolio/DeletePortfolio/@item.PortfolioId" class="btn btn-outline-danger">Sil</a></td>
							<td><a href="/Portfolio/EditPortfolio/@item.PortfolioId" class="btn btn-outline-warning">Düzenle</a></td>

						</tr>
					}

					</tbody>
				</table>
				<br/>
				<a href="/Portfolio/AddPortfolio/" class="btn btn-outline-primary">Yeni Proje Ekle</a>
			</div>
		</div>
	</div>
</div>