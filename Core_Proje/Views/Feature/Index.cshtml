@model Entities.Concrete.Feature
@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("Index", "Feature", FormMethod.Post))
{
	<div class="col-12 grid-margin stretch-card">
		<div class="card">
			<div class="card-body">
				<p class="card-description"> Öne Çıkan Gönderi Düzenleme Paneli </p>
				<form class="forms-sample">
					@Html.HiddenFor(x => x.FeatureId)
					<br />
					<label>Başlık</label>
					@Html.TextBoxFor(x => x.Header, new {@class="form-control"})
					<br />
					<label>Ad Soyad</label>
					@Html.TextBoxFor(x => x.Name, new {@class="form-control"})
					<br />
					<label>Görev</label>
					@Html.TextBoxFor(x => x.Title, new {@class="form-control"})
					<br />
					<button class="btn btn-success">Güncelle</button>
				</form>
			</div>
		</div>
	</div>
}

